<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DegreePlan.EditTerm"
             Title="Edit Term">
    <VerticalStackLayout>
        <Entry x:Name="termNameEntry" Placeholder="Enter term name" Margin="10"/>

        <HorizontalStackLayout Spacing="5" Margin="10">
            <DatePicker x:Name="startDatePicker" />
            <Label VerticalTextAlignment="Center" Text=":"/>
            <DatePicker x:Name="endDatePicker" />
        </HorizontalStackLayout>

        <Button Text="Save" Clicked="Save_Clicked" Margin="10"/>
        <Button Text="Back" Clicked="Back_Clicked" Margin="10"/>
    </VerticalStackLayout>
</ContentPage>